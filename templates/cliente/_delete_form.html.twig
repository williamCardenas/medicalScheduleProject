<form method="post" action="{{ path('cliente_delete', {'id': cliente.id}) }}" onsubmit="return confirm('{% trans with {'_entidade':'cliente'} %}mensagem.deletar{% endtrans %}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cliente.id) }}">
    <button class="btn">Delete</button>
</form>
