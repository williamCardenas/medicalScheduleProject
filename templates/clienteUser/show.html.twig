{% extends 'base.html.twig' %} 

{% block title %}{{ 'titulo.cliente.show'|trans }}{% endblock %} 

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-head-line">{{ 'titulo.cliente.show'|trans }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <tbody>
                                <tr>
                                    <th>Nome Do Cliente</th>
                                    <td>{{ cliente.nome }}</td>
                                </tr>
                                <tr>
                                    <th>Nome do Usuario</th>
                                    <td>{{ user.username }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <th>Is Admin</th>
                                    <td>{{ user.isAdmin }}</td>
                                </tr>
                                <tr>
                                    <th>Is Active</th>
                                    <td>{{ user.IsActive }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-4 btn-float-left">
            <a class="btn btn-default btn-float-left" href="{{ path('cliente_user_index', {'clienteId': cliente.id}) }}">
                {{'botao.voltar'|trans}}
            </a>

            <a class="btn btn-default btn-float-left" href="{{ path('cliente_user_edit', {'id': user.id,'clienteId': cliente.id}) }}">
                {{'botao.editar'|trans}}
            </a>

            {{ include('clienteUser/_delete_form.html.twig') }}
        </div>
    </div>

</div>
{% endblock %}