{% extends 'base.html.twig' %}

{% block title %}Medico{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-head-line">{{ 'titulo.clinica.show'|trans }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ medico.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Nome</th>
                                        <td>{{ medico.nome }}</td>
                                    </tr>
                                    <tr>
                                        <th>NumeroDocumento</th>
                                        <td>{{ medico.numeroDocumento }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <a class="btn btn-default" href="{{ path('medico_index') }}">
            {{'botao.voltar'|trans}}
        </a>

        <a class="btn btn-default" href="{{ path('medico_edit', {'id': medico.id}) }}">
            {{'botao.editar'|trans}}
        </a>
        {{ include('medico/_delete_form.html.twig') }}
    </div>
{% endblock %}